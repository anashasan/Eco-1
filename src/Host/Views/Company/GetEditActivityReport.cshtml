@model Host.DataModel.EditDailyReportDto
@{
    Layout = "_AdminLayout";
}

<style>
    .error {
        color: red;
    }
</style>

<!-- Main content -->
<div class="page-header col-md-10">
    <div class="row">

    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 style="font-family:'Times New Roman'">Edit Daily Report</h4>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <input type="hidden" asp-for="BranchId" />
                            <form class="form-horizontal" asp-controller="Company" asp-action="UpdateActiviyReport" method="post">
                                <input type="hidden" asp-for="PkActivityPerformDetailId">
                              <input type="hidden" asp-for="BranchId" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Input <i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-6">
                                        <input class="form-control" asp-for="Perform" type="text">
                                        <span asp-validation-for="Perform" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Check Box</label>
                                    <div class="col-md-6">
                                        <select class="form-control" asp-for="IsPerform" placeholder="Select Business Name...">
                                            <option>True</option>
                                            <option>False</option>
                                            </select>

                                    </div>

                                </div>

                                <div>
                                    <button type="submit" value="submit" class="btn ">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
